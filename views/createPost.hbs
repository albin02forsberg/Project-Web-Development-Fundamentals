<header>
  <div class="title">
    <h2>Create post</h2>
  </div>
</header>

<section>
  <form action="/posts/create" method="POST">
    <div class="form-group">
      <h3>Title</h3>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        placeholder="Title"
      />
    </div>
    <div class="from-group">
      <h3>Subtitle</h3>
      <input
        type="text"
        class="form-control"
        id="subtitle"
        name="subtitle"
        placeholder="Subtitle"
      />
    </div>
    <div class="form-group">
      <h3>Content</h3>
      <textarea
        class="form-control"
        id="content"
        name="content"
        rows="3"
      ></textarea>
    </div>
    <hr />

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</section>