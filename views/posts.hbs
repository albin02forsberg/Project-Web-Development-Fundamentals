<header>
  <div class="title">
    <h2>Posts</h2>
  </div>
  {{#if session.loggedIn}}
  <a href="posts/create" class="btn btn-primary">
    New post
  </a>
  {{/if}}
</header>

<section>

  {{#unless posts}}
  <h2>There are no posts yet</h2>
  {{/unless}}

  <div class="row gy-2">
    {{#each posts}}
      <div class="col-6">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{title}}</h2>
            <h5 class="card-subtitle">{{subtitle}}</h5>
            <a href="/posts/{{id}}" class="card-link">Read more</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="center mt-5">
    <ul class="pagination">
      {{#if page.isLessPosts}}
      <li class="page-item">
        <a class="page-link" href="/posts?page={{page.previous}}">&laquo;</a>
      </li>
      {{/if}}
      {{#unless page.isLessPosts}}
      <li class="page-item disabled">
        <a class="page-link" href="#">&laquo;</a>
      </li>
      {{/unless}}
      {{#if page.isLessPosts}}
        <li class="page-item">
          <a
            class="page-link"
            href="/posts?page={{pagination.previous}}"
          >{{page.previous}}</a>
        </li>
      {{/if}}
      <li class="page-item">
        <a
          class="page-link active"
          href="/posts?page={{page.current}}"
        >{{page.current}}</a>
      </li>
      {{#if page.isMorePosts}}
        <li class="page-item">
          <a
            class="page-link"
            href="/posts?page={{page.next}}"
          >{{page.next}}</a>
        </li>
      {{/if}}
      {{#if page.isMorePosts}}
        <li class="page-item">
          <a
            class="page-link"
            href="/posts?page={{page.next}}"
          >&raquo;</a>
        </li>
      {{/if}}
      {{#unless page.isMorePosts}}
        <li class="page-item">
          <a
            class="page-link disabled"
            href="/posts?page={{page.next}}"
          >&raquo;</a>
        </li>
      {{/unless}}
    </ul>

  </div>
</section>