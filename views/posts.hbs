<header>
  <div class="title">
    <h2>Posts</h2>
  </div>
</header>

<section>
  <a href="posts/create" class="btn btn-primary">
    New post
  </a>

  <div class="row gy-2">
    {{#each posts}}
      <div class="col-6">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{title}}</h2>
            <h5 class="card-subtitle">{{subtitle}}</h5>
            <a href="/posts/{{id}}" class="card-link">Read more</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="center">
    <ul class="pagination">
      {{#if page.isLessPosts}}
        <li class="page-item">
          <a
            class="page-link"
            href="/posts?page={{page.previous}}"
            aria-label="Previous"
          >
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      {{/if}}
      {{#unless page.isLessPosts}}
        <li class="page-item disabled">
          <a
            class="page-link disabled"
            href="/posts?page={{page.previous}}"
            aria-label="Previous"
          >
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      {{/unless}}
      <li class="page-item">
        <a
          class="page-link"
          href="/posts?page={{page.current}}"
        >{{page.current}}</a>
      </li>
      {{#if page.isMorePosts}}

        <li class="page-item">
          <a
            class="page-link"
            href="/posts?page={{page.next}}"
            aria-label="Next"
          >
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      {{/if}}
      {{#unless page.isMorePosts}}
        <li class="page-item">
          <a
            class="page-link disabled"
            href="/posts?page={{page.next}}"
            aria-label="Next"
          >
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>

      {{/unless}}
    </ul>

  </div>
</section>