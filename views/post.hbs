<header>
  <div class="title">
    <h2>{{post.title}}</h2>
  </div>
</header>

<section>
  <p class="markdown">{{{post.content}}}</p>
  <hr />
  <h2>Comment</h2>

  <form action="/posts/{{post.id}}/comment" method="POST">
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        id="userName"
        name="userName"
        placeholder="User name"
      />
    </div>
    <br />
    <div class="form-group">
      <textarea
        class="form-control"
        id="content"
        name="content"
        rows="3"
      ></textarea>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary">Comment</button>
  </form>
  <hr />
  {{#if comments}}
    <h2>Comments</h2>
    {{#each comments}}
      <div class="card">
        <div class="card-body">
          <p class="card-text">{{content}}</p>
        </div>
        <h5 class="card-footer">{{userName}}</h5>
      </div>
    {{/each}}
  {{else}}
    <h2>Be the first one to comment!</h2>
  {{/if}}
</section>